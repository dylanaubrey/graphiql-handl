{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es2016.array.include",
      "es2017.object",
      "es6",
      "esnext.asynciterable",
      "scripthost",
      "webworker"
    ],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "paths": {
      "~/*": ["src/*"]
    },
    "pretty": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": ["src/**/*", "test/**/*"],
  "plugins": [{
    "name": "typescript-styled-plugin"
  }]
}
